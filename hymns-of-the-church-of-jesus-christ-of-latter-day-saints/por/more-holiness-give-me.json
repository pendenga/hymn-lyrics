  "title": "Mais Vontade D\u00e1-me",
  "marking": "Fervorosamente",
  "verses": [
    {
      "number": 1,
      "lines": [
        "Mais vontade d\u00e1-me",
        "De odiar o mal,",
        "Mais calma em pesares,",
        "Mais nobre ideal;",
        "Mais f\u00e9 no meu Mestre,",
        "Mais consagra\u00e7\u00e3o,",
        "Mais for\u00e7a ao servi-lo,",
        "Mais grata ora\u00e7\u00e3o."
      ]
    },
    {
      "number": 2,
      "lines": [
        "Mais prudente faz-me,",
        "Mais s\u00e1bio e gentil,",
        "Mais firme na causa,",
        "Mais forte e viril;",
        "Mais reto na vida,",
        "Mais triste ao pecar,",
        "Mais humilde filho,",
        "Mais pronto a amar."
      ]
    },
    {
      "number": 3,
      "lines": [
        "Mais pureza d\u00e1-me,",
        "Mais for\u00e7a em Jesus,",
        "Mais autodom\u00ednio,",
        "Mais paz nessa cruz;",
        "Mais rica esperan\u00e7a,",
        "Mais obras aqui,",
        "Mais \u00e2nsia do c\u00e9u,",
        "Mais vida em ti."
      ]
    }
  ],
