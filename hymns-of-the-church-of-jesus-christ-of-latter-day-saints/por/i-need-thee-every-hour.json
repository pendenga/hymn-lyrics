{
  "number": 61,
  "title": "Care\u00e7o de Jesus",
  "marking": "Com fervor",
  "verses": [
    {
      "number": 1,
      "lines": [
        "Care\u00e7o de Jesus!",
        "De ti, \u00f3 meu Senhor;",
        "Somente a tua voz",
        "Tem para mim valor.",
        "De ti, Senhor care\u00e7o,",
        "S\u00f3 de ti care\u00e7o!",
        "Oh, d\u00e1-me a tua b\u00ean\u00e7\u00e3o,",
        "Jesus, Senhor!"
      ]
    },
    {
      "number": 2,
      "lines": [
        "Care\u00e7o de Jesus!",
        "Unido a ti, Senhor,",
        "Pecado e tenta\u00e7\u00e3o",
        "Inspiram-me horror.",
        "De ti, Senhor care\u00e7o,",
        "S\u00f3 de ti care\u00e7o!",
        "Oh, d\u00e1-me a tua b\u00ean\u00e7\u00e3o,",
        "Jesus, Senhor!"
      ]
    },
    {
      "number": 3,
      "lines": [
        "Care\u00e7o de Jesus!",
        "\u00c9 teu meu cora\u00e7\u00e3o;",
        "Ensina-me a viver",
        "Em santa retid\u00e3o.",
        "De ti, Senhor care\u00e7o,",
        "S\u00f3 de ti care\u00e7o!",
        "Oh, d\u00e1-me a tua b\u00ean\u00e7\u00e3o,",
        "Jesus, Senhor!"
      ]
    },
    {
      "number": 4,
      "lines": [
        "Care\u00e7o de Jesus!",
        "Nas trevas e na luz;",
        "Sem ti a vida \u00e9 v\u00e3\u2014",
        "Sou pobre sem Jesus.",
        "De ti, Senhor care\u00e7o,",
        "S\u00f3 de ti care\u00e7o!",
        "Oh, d\u00e1-me a tua b\u00ean\u00e7\u00e3o,",
        "Jesus, Senhor!"
      ]
    }
  ],
