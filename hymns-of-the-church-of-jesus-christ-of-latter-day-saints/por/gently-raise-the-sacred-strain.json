  "title": "Entoai a Deus Louvor",
  "marking": "Reverente",
  "verses": [
    {
      "number": 1,
      "lines": [
        "Entoai a Deus louvor,",
        "Neste dia do Senhor.",
        "Repousareis,",
        "Repousareis!",
        "Gratid\u00e3o a Deus dareis",
        "Pelas b\u00ean\u00e7\u00e3os e amor,",
        "Pelas b\u00ean\u00e7\u00e3os e amor."
      ]
    },
    {
      "number": 2,
      "lines": [
        "Dia santo de orar,",
        "Vida Eterna suplicar",
        "Por galard\u00e3o,",
        "Por galard\u00e3o.",
        "E da ceia do Senhor",
        "Fervorosos partilhar,",
        "Fervorosos partilhar."
      ]
    },
    {
      "number": 3,
      "lines": [
        "Elevai os cora\u00e7\u00f5es",
        "Em humildes ora\u00e7\u00f5es",
        "Com grata voz,",
        "Com grata voz.",
        "Dediquemos ao Senhor",
        "Um contrito cora\u00e7\u00e3o,",
        "Um contrito cora\u00e7\u00e3o."
      ]
    },
    {
      "number": 4,
      "lines": [
        "Santo, santo \u00e9 o Senhor",
        "Precioso seu amor",
        "Pois concedeu,",
        "Pois concedeu",
        "Ao contrito pecador",
        "Sua gra\u00e7a e perd\u00e3o,",
        "Sua gra\u00e7a e perd\u00e3o."
      ]
    }
  ],
