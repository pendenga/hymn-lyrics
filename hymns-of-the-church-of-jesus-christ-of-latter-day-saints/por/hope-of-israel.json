  "title": "Juventude da Promessa",
  "marking": "Marcial",
  "verses": [
    {
      "number": 1,
      "lines": [
        "Juventude da promessa,",
        "Esperan\u00e7a de Si\u00e3o,",
        "Escutai ao grande Mestre",
        "E segui-o em uni\u00e3o.",
        "Juventude de Israel,",
        "Valorosa e fiel",
        "Pelo Reino combatei,",
        "Lealdade dai ao Rei!"
      ]
    },
    {
      "number": 2,
      "lines": [
        "J\u00e1 as hostes inimigas",
        "Se aprestam a lutar;",
        "Juventude, pelas armas,",
        "Ide louros conquistar.",
        "Juventude de Israel,",
        "Valorosa e fiel",
        "Pelo Reino combatei,",
        "Lealdade dai ao Rei!"
      ]
    },
    {
      "number": 3,
      "lines": [
        "Por Si\u00e3o e a justi\u00e7a",
        "A maldade desfazei;",
        "Empunhai as vossas armas",
        "A verdade defendei.",
        "Juventude de Israel,",
        "Valorosa e fiel",
        "Pelo Reino combatei,",
        "Lealdade dai ao Rei!"
      ]
    },
    {
      "number": 4,
      "lines": [
        "A batalha em breve finda,",
        "A verdade vencer\u00e1.",
        "Juventude, avante, avante!",
        "A vit\u00f3ria perto est\u00e1!",
        "Juventude de Israel,",
        "Valorosa e fiel",
        "Pelo Reino combatei,",
        "Lealdade dai ao Rei!"
      ]
    }
  ],
