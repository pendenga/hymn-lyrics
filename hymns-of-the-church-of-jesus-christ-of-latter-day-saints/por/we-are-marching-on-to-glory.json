{
  "number": 159,
  "title": "\u00c0 Gl\u00f3ria N\u00f3s Iremos",
  "marking": "Com vigor",
  "verses": [
    {
      "number": 1,
      "lines": [
        "\u00c0 gl\u00f3ria n\u00f3s iremos,",
        "Em busca de um lugar;",
        "A f\u00e9 n\u00f3s guardaremos,",
        "Sem nunca olvidar.",
        "Marchemos, sim, marchemos ao lar celestial",
        "A salva\u00e7\u00e3o busquemos,",
        "Com nossa f\u00e9 real."
      ]
    },
    {
      "number": 2,
      "lines": [
        "A marcha n\u00e3o paremos,",
        "Vivamos em uni\u00e3o;",
        "As obras que fazemos,",
        "Nos d\u00e3o o galard\u00e3o.",
        "Marchemos, sim, marchemos ao lar celestial",
        "A salva\u00e7\u00e3o busquemos,",
        "Com nossa f\u00e9 real."
      ]
    },
    {
      "number": 3,
      "lines": [
        "Com santos viveremos,",
        "Na gl\u00f3ria perenal;",
        "A Cristo louvaremos,",
        "Com gratid\u00e3o leal.",
        "Marchemos, sim, marchemos ao lar celestial",
        "A salva\u00e7\u00e3o busquemos,",
        "Com nossa f\u00e9 real."
      ]
    }
  ],
