{
  "number": 81,
  "title": "\u00bfPensaste orar?",
  "marking": "Con reflexi\u00f3n",
  "verses": [
    {
      "number": 1,
      "lines": [
        "\u00bfCon fervor orar pensaste",
        "al amanecer?",
        "\u00bfSuplicaste por la gracia",
        "y amparo este d\u00eda",
        "en tu oraci\u00f3n?",
        "\u00a1Qu\u00e9 reposo al cansado",
        "es la humilde oraci\u00f3n!",
        "Trae consuelo al herido,",
        "paz al coraz\u00f3n."
      ]
    },
    {
      "number": 2,
      "lines": [
        "\u00bfCon fervor orar pensaste",
        "al enfurecer?",
        "\u00bfNo pediste, mi hermano,",
        "que, al verte ofendido,",
        "dieras el perd\u00f3n?",
        "\u00a1Qu\u00e9 reposo al cansado",
        "es la humilde oraci\u00f3n!",
        "Trae consuelo al herido,",
        "paz al coraz\u00f3n."
      ]
    },
    {
      "number": 3,
      "lines": [
        "\u00bfCon fervor orar pensaste",
        "al entristecer?",
        "Cuando lleno de pesares,",
        "\u00bfa tu Dios le suplicaste",
        "al amanecer?",
        "\u00a1Qu\u00e9 reposo al cansado",
        "es la humilde oraci\u00f3n!",
        "Trae consuelo al herido,",
        "paz al coraz\u00f3n."
      ]
    }
  ],
